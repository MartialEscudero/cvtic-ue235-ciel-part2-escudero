{% extends 'base.html.twig' %}

{% block title %}Plat - {{ plat.nom }}{% endblock %}

{% block body %}
<div class="container">
    <div class="row">
        <div class="container">
            <h1 class="text-center mb-5">{{ plat.nom }}</h1>
            <div class="row">
                {% if plat.Category.name is defined %}
                <small class="col-lg-12 text-center mb-5 font-weight-light font-italic">
                    {{ plat.Category.name }}
                </small>
                {% endif %}
                <div class="col-lg-12 mb-3 text-justify">
                    {{ plat.description }}
                </div>
                <div class="col-lg-6 mb-5 text-center">
                    <a href="{{ path('plat_index') }}" class="btn btn-info btn-sm" role="button">Retour</a>
                </div>
                <div class="col-lg-6 mb-5 text-center">
                    <a href="{{ path('plat_edit', {'id': plat.id}) }}" class="btn btn-warning btn-sm" role="button">Modifier</a>
                </div>
            </div>
        </div>
    </div>
</div>
{{ include('plat/_delete_form.html.twig') }}
{% endblock %}
